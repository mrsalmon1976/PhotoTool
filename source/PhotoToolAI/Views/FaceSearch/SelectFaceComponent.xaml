                Padding="0,0"
                Spacing="10">

                <Label
            Text="Who would you like to search for?"
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Who would you like to search for?" 
            HorizontalOptions="StartAndExpand"
            />
            <FlexLayout Grid.Row="1" x:Name="savedFaces" Direction="Row" Wrap="Wrap" AlignItems="Start" JustifyContent="Start" Padding="10,0,0,0">
                </FlexLayout>
