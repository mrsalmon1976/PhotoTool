<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:PhotoToolAI.Views.Shared"
             x:Class="PhotoToolAI.Views.FaceSearch.SearchFolderControl"
             >
    <VerticalStackLayout>
        <shared:FileSystemItemComponent x:Name="fileSystemItem" IsCancelButtonVisible="False" CancelClicked="fileSystemItemCancelClicked" />
        <FlexLayout x:Name="searchResults" Direction="Row" Wrap="Wrap" AlignItems="Start" JustifyContent="Start" Padding="10,0,0,0">
        </FlexLayout>
    </VerticalStackLayout>
</ContentView>
