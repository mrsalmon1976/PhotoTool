<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoToolAI.Views.FaceSearch.FaceControl">
    <Frame x:Name="frame" Padding="0" Margin="3">
        <VerticalStackLayout Padding="10">
            <ImageButton
                x:Name="faceImage"
                Source="dotnet_bot.png"
                HeightRequest="100"
                Aspect="AspectFit"
                Clicked="faceImage_Clicked"
                />

            <Label 
                x:Name="nameLabel"
                Text="Loading..."
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Margin="0,0,0,0"/>
        </VerticalStackLayout>
    </Frame>
</ContentView>
