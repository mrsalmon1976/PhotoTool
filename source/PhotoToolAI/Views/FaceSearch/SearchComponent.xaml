<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoToolAI.Views.FaceSearch.SearchComponent">
    <ScrollView MinimumHeightRequest="0">
        <Grid RowDefinitions="Auto, *, Auto">
            <Label
                Grid.Row="0"
                Text="Select folders to begin searching"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Select folders to begin searching" 
                HorizontalOptions="StartAndExpand"
                />
            <VerticalStackLayout Grid.Row="1" x:Name="sources" Padding="10,0,0,0" Spacing="10">
            </VerticalStackLayout>
            <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="End" Padding="10">
                <Button Text="&lt;&lt;   Back" WidthRequest="120" Clicked="BtnBack_Clicked" />
                <Button Text="Add Folder" WidthRequest="120" Clicked="SelectFolderButtonClicked" />
            </HorizontalStackLayout>
        </Grid>
    </ScrollView>

</ContentView>
