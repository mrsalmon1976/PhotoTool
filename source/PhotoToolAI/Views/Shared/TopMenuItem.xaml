<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoToolAI.Views.Shared.TopMenuItem">

    <StackLayout>
        <HorizontalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Image x:Name="image" HeightRequest="30" WidthRequest="25" HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFit" Scale="1.0" IsOpaque="False" />
            <Button x:Name="button" Text="" HorizontalOptions="Center" MinimumWidthRequest="20" Style="{StaticResource TopMenuItemButtonDisabled}" Clicked="ButtonClicked" />
        </HorizontalStackLayout>
        <BoxView x:Name="line" Style="{StaticResource TopMenuItemBoxDisabled}" />
    </StackLayout>
    
</ContentView>
